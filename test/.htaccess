Options -MultiViews

RewriteEngine On
RewriteBase /test/

# 1) Laisse passer tout le sous-dossier tools/ (scripts ponctuels)
RewriteRule ^tools/ - [L]

# 2) Laisse passer n'importe quel .php situé à la racine de /test/
RewriteRule ^[^/]+\.php$ - [L,NC]

# 3) Sert directement les fichiers/dossiers existants
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 4) Le reste va à l’index de l’app
RewriteRule . index.php [L]